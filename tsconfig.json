{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "lib": ["es2015", "dom"],
    "outDir": "js",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@server/*": ["server/src/*"]
    }
  },
  "exclude": ["node_modules"]
}

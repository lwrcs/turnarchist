{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "sourceMap": true,

    "lib": ["es2015", "dom"],
    //"inlineSources": true,
    //"inlineSourceMap": false,
    "outDir": "js",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@server/*": ["server/src/*"]
    }
  },
  "include": [
    "src/**/*",
    "other-folder/**/*" // Add paths to other folders containing .ts files
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts" // Optional: exclude test files
  ]
}
